<Window x:Class="HopeLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hope Love" Height="350" Width="525" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" Initialized="Window_Initialized">
    <Grid>
        <ScrollViewer x:Name="scrolls" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <ScrollViewer.Content>
                <StackPanel x:Name="stackPanel_Global" Orientation="Vertical"   ScrollViewer.VerticalScrollBarVisibility="Auto">
                </StackPanel>
            </ScrollViewer.Content>
        </ScrollViewer>
    </Grid>
</Window>
